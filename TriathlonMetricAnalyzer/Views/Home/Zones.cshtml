        </tr>
        <tr>
            <td>T5</td>
            <td>@TimeSpan.FromSeconds(ViewBag.RunZones[4])</td>
        </tr>
        <tr>
            <td>T6</td>
            <td>@TimeSpan.FromSeconds(ViewBag.RunZones[5])</td>
        </tr>
        <tr>
