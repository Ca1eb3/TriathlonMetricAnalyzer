@model IEnumerable<TriathlonMetricAnalyzer.Models.StravaAPIObjects.SummaryActivity>

@{
    ViewData["Title"] = "Activities";
}

<h1>Activities</h1>

<div style="overflow-x:auto;">

<table class="table" style="background-color:#b8c3d6">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElapsedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalElevationGain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElevationHigh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElevationLow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilojoules)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageWatts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxWatts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightedAverageWatts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageHeartrate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxHeartrate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElapsedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalElevationGain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElevationHigh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElevationLow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageSpeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSpeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilojoules)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageWatts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxWatts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightedAverageWatts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageHeartrate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxHeartrate)
            </td>
        </tr>
}
    </tbody>
</table>

</div>
